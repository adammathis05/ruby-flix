<h1>Add a Review for <%= link_to @movie.title, @movie %></h1>

<%= form_with(model: [@movie, @review]) do |f| %>

    <%= render "shared/errors", object: @review %>

    <%= f.label :name, autofocus: true %>
    <%= f.text_field :name %>

    <div class="legend">Stars</div>
        <% Review::STARS.each do |star| %>
            <span class="star">
                <%= f.radio_button :stars, star %>
                <%= f.label :stars, star, value: star %>
            </span>
<% end %>

    <%= f.label :comment %>
    <%= f.text_area :comment, placeholder: "What did you think?", rows: 5 %>

    <%= f.submit "Post Review"%>

<% end %>
