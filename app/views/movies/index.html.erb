<% @movies.each do |movie| %>
<section class = "movie">
  <div class = "summary">
    <h2>
      <%= link_to movie.title, movie %> (<%= movie.rating %>)
    </h2>
    <h3>
      <%= total_gross(movie) %>
    </h3>
    <p>
      <%= truncate(movie.description, length: 150, separator: ' ') %>
    </p>
    <p>
      Released in: <%= year_of(movie) %>
    </p>
  </div>
</section>
<% end %>
